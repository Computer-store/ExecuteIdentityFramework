@{ 
    var user = HttpContext.Current.User.Identity.Name;
}
<!Doctype html>
<html>
<head>
  
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />

    <style>
        .container {
            padding-top: 10px;
        }

        .validation-summary-errors {
            color: #f00;
            padding: 10px;
        }
    </style>
</head>

<body>
    <script type="text/javascript" src="~/Scripts/jquery-1.9.0.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <nav class="navbar navbar-inverse navbar-static-top marginBottom-0">

        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Computer store", "Index", "Home", new { @class="navbar-brand"})
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li class="active"><i class="fa fa-home"></i><a href="#">User interfase</a></li>
                <li><a href="#">Пункт 2</a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Выпадающий пункт <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#">Подпункт</a></li>
                        <li><a href="#">Еще подпункт</a></li>
                        <li><a href="#">Еще что-то</a></li>
                        <li class="divider"></li>
                        <li><a href="#">И еще</a></li>
                    </ul>
                </li>
                <li><a href="#">Пункт 4</a></li>
                <li><a href="#">Пункт 5</a></li>
                @if (user.Length==0 || user == null)
                {
                    <li style="font-size: 15px; color: wheat">User is not authorise</li>
                }
                else
                {
                    <li style="font-size: 15px; color: wheat">Hello, @user</li>
                }

            </ul>
        </div>
    </nav>

 

      
    



    <div class="container">
        @RenderBody()
    </div>
</body>
</html>

